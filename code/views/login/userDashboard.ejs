      </section>

      <div class="container-2">
    
        <div class="row row-2">
            <h2><strong>All Fertilizers</strong></h2>
        </div>

        <% var count = 0; %>
        <% var numRows = Math.ceil(fertList.length/4); %>
        <% for(var i=0; i < numRows; i++){ %>
          <div class="row">
            <% for(var j=0; j < 4; j++){ %>
              <% if(count < fertList.length){ %>
                <div class="col-4">
                  <div style="border: green solid 2px;">
                    <% if(fertList[count].availability) {%>
                      <a href="/userDashboard/product/<%= fertList[count].fert_id %>" ><img src="<%= fertList[count].image %>" alt=""></a>
                    <% }else{ %>
                      <img src="<%= fertList[count].image %>" alt="">
                    <% } %>
                  <div style="text-align: center; width: 100%; ">
                    <h1><%= fertList[count].fert_name %></h1>
                    <p><strong>Total Cost : Rs. <%= fertList[count].total_cost %></strong></p>
                    <% if(fertList[count].availability == 0) { %>
                      <p><strong>Status : <span style="color: red;" >Out of Stock</span></strong></p>
                    <% } else{ %>
                      <p><strong>Status : <span style="color: green;" >Available</span></strong></p>
                    <% } %>
  
                    <!-- <p><strong>Date : <%= fertList[count].orderDate %></strong></p> -->
                  </div>
                  </div>
                </div>
                <% count++; %>
              <% } %>
            <% } %>
          </div>
        <% } %>
      </div>
